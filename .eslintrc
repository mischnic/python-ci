{
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "amd": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "off",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "warn",
            "always"
        ],
        "no-console": [
            "off",
            "always"
        ],
        "no-unused-vars": [
            "warn"
        ],
        "react/jsx-uses-vars": 1,
        "react/jsx-uses-react": 1
    }
}